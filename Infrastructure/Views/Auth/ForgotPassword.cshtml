@{
    ViewData["Title"] = "Get Password";
}
@model bool

<div class="form-container">
    <div class="form-card">
        <div class="icon-container">
            <i class="fa-solid fa-circle-exclamation"></i>
        </div>
        <h2>Quên mật khẩu</h2>
        <p>Vui lòng nhập tên đăng nhập hoặc địa chỉ email.</p>
        <form method="post">
            <div class="input-group">
                <input type="text" name="UsernameOrEmail" placeholder="Tên đăng nhập hoặc email" required>
                @if (Model)
                {
                    <span class="text-danger">Email không hợp lệ</span>
                }
                @if (Html.ViewContext.ModelState["UsernameOrEmail"]?.Errors.Count > 0)
                {
                    <span class="text-danger">@Html.ViewContext.ModelState["UsernameOrEmail"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                }
            </div>
            <button type="submit" class="submit-button">Xác nhận</button>
        </form>
        <a href="/Login" class="back-link">← Quay lại trang đăng nhập</a>
    </div>
</div>

