<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Tìm tất cả phần tử .counter
        const counters = document.querySelectorAll('.counter');

        // IntersectionObserver để “nghe” khi .counter lọt vào khung nhìn
        const observer = new IntersectionObserver((entries, obs) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Bắt đầu hiệu ứng đếm khi phần tử xuất hiện
                    startCount(entry.target);
                    // Ngừng quan sát phần tử này (chỉ đếm 1 lần)
                    obs.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.5 // ít nhất 50% phần tử hiển thị mới kích hoạt
        });

        // Đăng ký quan sát cho tất cả .counter
        counters.forEach(counter => observer.observe(counter));

        // Hàm đếm: tất cả sẽ chạy đủ 'duration' ms => cùng kết thúc
        function startCount(element) {
            // Giá trị đích (loại bỏ ký tự không phải số)
            const target = parseInt(element.innerText.replace(/\D/g, ''), 10) || 0;
            let current = 0;

            // Thời gian chạy hiệu ứng (ms) - tất cả sẽ cùng chạy 3 giây
            const duration = 3000;
            // Khoảng thời gian giữa mỗi lần cập nhật
            const intervalDelay = 50;
            // Số lần lặp cập nhật
            const steps = Math.floor(duration / intervalDelay);
            // Mỗi bước tăng thêm bao nhiêu
            const increment = target / steps;

            let currentStep = 0;

            // Dùng setInterval để cập nhật số
            const timer = setInterval(() => {
                currentStep++;
                // Tính giá trị hiện tại
                let value = increment * currentStep;
                if (value >= target) {
                    value = target; // Nếu vượt, giữ bằng target
                }
                element.innerText = Math.floor(value);

                // Hết số lần lặp => dừng hẳn
                if (currentStep >= steps) {
                    clearInterval(timer);
                }
            }, intervalDelay);
        }
    });
</script>

